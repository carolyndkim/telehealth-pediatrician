<%= simple_form_for physician, html: { class: "physician form" } do |f| %>
    <%= form_error_notification(physician) %>
  
    <%= f.input :name, input_html: { autofocus: true } %>
    <%= link_to "Cancel", physicians_path, class: "btn btn--light" %>
    <%= f.submit class: "btn btn--secondary" %>
  <% end %>