<%# empty the Turbo Frame containing the form %>
<%= turbo_stream.update nested_dom_id(@parent, Visit.new), "" %>

<%# append the created line item to the list %>
<%= turbo_stream.append nested_dom_id(@parent, "visits") do %>
  <%= render @visit, parent: @parent %>
<% end %>

<%= render_turbo_stream_flash_messages %>

<%= turbo_stream.update dom_id(@parent, :total) do %>
    <%= render "parents/total", parent: @parent %>
<% end %>