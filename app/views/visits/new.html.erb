<main class="container">
  <%= link_to sanitize("&larr; Back to parent"), parent_path(@parent) %>

  <div class="header">
    <h1>New visit request for <%= @child.name %></h1>
  </div>

  <%= turbo_frame_tag nested_dom_id(@child, Visit.new) do %>
    <%= render "form",
              parent: @parent,
              child: @child,
              visit: @visit %>
  <% end %>
</main>